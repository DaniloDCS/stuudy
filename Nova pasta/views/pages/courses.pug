extends ../layout
block content

  style. 
    .courses {
      display: flex;
      flex-wrap: wrap;
      justify-content: flex-start;
      align-items: center;
    }

    .courses .course {
      width: 48%;
      height: 100px;
      margin: 5px;
      cursor: pointer;
      transition: all 0.3s ease;
      border: 2px solid #ccc;
      position: relative;
      background-color: green;
      color: black;
      display: flex;
      align-items: center;
      justify-content: space-betwen;
      border-radius: 20px;
      padding: 10px 15px;
    }

    .course .course-icon {
      width: 60px;
      height: 60px;
      background-color: rgba(250, 250, 250, 0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 20px;
      font-size: xx-large;
    }

    .course-details {
      width: 100%;
      padding: 10px;
      color: white;
    }

    .course-progress {
      width: 100%;
      height: 15px;
      border-radius: 20px;
      background-color: #ccc;
      margin: 6px 0;
    }

    .course-progress-bar {
      height: 100%;
      background-color: blue;
      border-radius: 20px;
      min-width: fit-content;
      display: flex;
      justify-content: flex-end;
      align-items: center;
      color: white;
      font-weigth: bold;
      font-size: x-small;
      padding: 0 5px;
    }

  .w-100
    h3 Meus cursos 
    if !courses.length
      p Nenhum curso encontrado
    else
      .courses
        each course, index in courses
          .course
            .course-icon #{course.icon} 
            .course-details
              .course-title #{course.name}
              .course-status #{course.status}
              .course-progress
                .course-progress-bar(style=`width: ${course.dados.workloadPercentage}%`) #{course.dados.workloadPercentage}%
              a(href="/course/c/" + course.id) Acessar curso <i class="fas fa-arrow-right"></i> 
            
    button(data-btn-modal="register-course") <i class="fas fa-folder-plus"></i> Registrar um novo curso
    .modal.modal-lg(data-modal="register-course")
      form.modal-content(action="/course/register" method="POST")
        .modal-header
          span(data-modal-close="register-course") <i class="fas fa-times-circle"></i>
          h3 Registrar um novo curso
        .modal-body
          div 
            label(for="name") Nome do curso
            input(type="text" name="name" id="name")
          div
            label(for="icon") Ícone do curso
            input(type="text" name="icon" id="icon")
          div
            label(for="description") Descrição do curso
            input(type="text" name="description" id="description")
          div
            label(for="university") Universidade
            input(type="text" name="university" id="university")
          div
            label(for="location") Localização
            input(type="text" name="location" id="location")
          div
            label(for="status") Status
            select#status(name="status")
              option(value="studying") Estudando
              option(value="concluded") Concluído
              option(value="dropped") Abandonado
              option(value="cancelled") Cancelado
              option(value="failed") Reprovado
              option(value="waiting") Aguardando
          div
            label(for="level") Nível
            input(type="text" name="level" id="level")
          div
            label(for="type") Tipo
            input(type="text" name="type" id="type")
          div
            label(for="startedIn") Início
            input(type="date" name="startedIn" id="startedIn")
          div
            label(for="finishedIn") Término
            input(type="date" name="finishedIn" id="finishedIn")
        .modal-footer
          button.modal-btn-cancel(data-modal-close="register-course", type="button") <i class="fas fa-times-circle"></i> Cancelar 
          button.modal-btn-ok(type="submit") <i class="fas fa-check-circle"></i> Finalizar
