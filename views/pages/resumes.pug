h3 Meus resumos

button(data-btn-modal="new-resume") <i class="fas fa-plus"></i> Criar um novo lembrete
.modal.modal-md(data-modal="new-resume")
  form.modal-content(action="/resume/register" method="POST")
    .modal-header
      span(data-modal-close="new-resume") <i class="fas fa-times-circle"></i>
      h3 Criar um novo lembrete
    .modal-body
      div 
        label(for="title") Título
        input(type="text" name="title" id="title")
      div 
        label(for="content") Conteúdo
        textarea(type="text" name="content" id="content")
    .modal-footer
      button.modal-btn-cancel(data-modal-close="new-resume", type="button") <i class="fas fa-times-circle"></i> Cancelar 
      button.modal-btn-ok(type="submit") <i class="fas fa-check-circle"></i> Finalizar

table   
  tr 
    th #
    th Título
    th Link
    th Ações
  - cont = 1; 
  if discipline.resumes.length > 0
    each resume, index in discipline.resumes
      tr 
        th #{cont++}
        td #{resume.title}
        td #{resume.link}
        td 
          a(href="/disciplines/discipline/" + discipline.id + "/resume/" + resume.id) Acessar
          a(href="/disciplines/discipline/" + discipline.id + "/resume/" + resume.id + "/delete")  | Remover
  else
    tr
      td(colspan="4") Nenhum resumo cadastrado

h3 Registrar um novo resumo
form(action="/disciplines/discipline/resume/register" method="POST")
  div 
    label(for="title") Título
    input(type="text" name="title" id="title")
  div 
    label(for="content") Conteúdo
    input(type="text" name="content" id="content")
  div 
    button(type="submit") Cadastrar
